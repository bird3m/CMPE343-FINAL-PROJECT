<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="540.0" prefWidth="960.0" spacing="20.0" 
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="main.uistuff.LoginController">

    <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
    </padding>

    <Label text="GreenGrocer Login" textFill="#2c3e50">
        <font>
            <Font name="System Bold" size="36.0" />
        </font>
    </Label>

    <VBox alignment="CENTER" maxWidth="300.0" spacing="5.0">
        <Label text="Username" maxWidth="300.0" alignment="CENTER_LEFT"/>
        <TextField fx:id="usernameField" promptText="Enter your username" 
                   style="-fx-font-size: 14px; -fx-padding: 10px;" />
    </VBox>

    <VBox alignment="CENTER" maxWidth="300.0" spacing="5.0">
        <Label text="Password" maxWidth="300.0" alignment="CENTER_LEFT"/>
        <PasswordField fx:id="passwordField" promptText="Enter your password" 
                       style="-fx-font-size: 14px; -fx-padding: 10px;" />
    </VBox>

    <Label fx:id="errorLabel" textFill="RED">
        <font>
            <Font size="14.0" />
        </font>
    </Label>

    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="loginButton" defaultButton="true" mnemonicParsing="false" 
                text="Login" textFill="WHITE" 
                style="-fx-background-color: #27ae60; -fx-font-size: 14px; -fx-padding: 10 30 10 30; -fx-cursor: hand;" />
        
        <Button fx:id="registerButton" mnemonicParsing="false" 
                text="Register" 
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 30 10 30; -fx-cursor: hand;" />
    </HBox>

</VBox>