<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="540.0" prefWidth="960.0" styleClass="login-root" 
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controllers.LoginController">
   <children>
      <!-- Login Form Container -->
      <VBox alignment="CENTER" layoutX="330.0" layoutY="120.0" prefHeight="300.0" prefWidth="300.0" 
            spacing="20.0" styleClass="login-box" AnchorPane.leftAnchor="330.0" 
            AnchorPane.rightAnchor="330.0" AnchorPane.topAnchor="120.0">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            <!-- Title -->
            <Label text="ðŸ¥¬ GreenGrocer ðŸŽ" textFill="#8e44ad">
               <font>
                  <Font name="Arial Black" size="28.0" />
               </font>
            </Label>
            
            <Label text="Login" textFill="#555555">
               <font>
                  <Font name="Arial" size="16.0" />
               </font>
            </Label>
            
            <!-- Username -->
            <TextField fx:id="usernameField" prefHeight="40.0" promptText="Username" 
                      styleClass="input-field">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </TextField>
            
            <!-- Password -->
            <PasswordField fx:id="passwordField" prefHeight="40.0" promptText="Password" 
                          styleClass="input-field">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </PasswordField>
            
            <!-- Error Label -->
            <Label fx:id="errorLabel" text="Error message here" textFill="#e74c3c" 
                   visible="false" wrapText="true">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            
            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" 
                         prefHeight="40.0" prefWidth="120.0" styleClass="login-btn" text="Login">
                     <font>
                        <Font name="Arial Bold" size="14.0" />
                     </font>
                  </Button>
                  
                  <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegister" 
                         prefHeight="40.0" prefWidth="120.0" styleClass="register-btn" text="Register">
                     <font>
                        <Font name="Arial Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>