                  <!-- Quantity Column -->
                  <TableColumn fx:id="quantityColumn" prefWidth="150.0" 
                              text="Quantity (kg)" />
                  
                  <!-- Unit Price Column -->
                  <TableColumn fx:id="priceColumn" prefWidth="150.0" 
