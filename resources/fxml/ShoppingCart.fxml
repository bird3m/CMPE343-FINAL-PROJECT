<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="540.0" prefWidth="960.0" styleClass="main-root" 
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controllers.ShoppingCartController">
   
   <!-- TOP: Title -->
   <top>
      <HBox alignment="CENTER" prefHeight="60.0" styleClass="top-bar" BorderPane.alignment="CENTER">
         <children>
            <Label text="ðŸ›’ Shopping Cart" textFill="WHITE">
               <font>
                  <Font name="Arial Black" size="22.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   
   <!-- CENTER: Cart Table -->
   <center>
      <VBox prefHeight="400.0" prefWidth="960.0" spacing="15.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
         <children>
            <!-- Cart Table -->
            <TableView fx:id="cartTable" prefHeight="300.0" styleClass="cart-table" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="productColumn" prefWidth="300.0" text="Product" />
                  <TableColumn fx:id="quantityColumn" prefWidth="150.0" text="Quantity (kg)" />
                  <TableColumn fx:id="priceColumn" prefWidth="200.0" text="Unit Price (â‚º)" />
                  <TableColumn fx:id="totalColumn" prefWidth="200.0" text="Total (â‚º)" />
               </columns>
            </TableView>
            
            <!-- Remove Button -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button fx:id="removeButton" mnemonicParsing="false" onAction="#handleRemove" 
                         prefHeight="35.0" prefWidth="150.0" styleClass="remove-btn" text="Remove Item">
                     <font>
                        <Font name="Arial Bold" size="13.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   
   <!-- RIGHT: Totals -->
   <right>
      <VBox prefHeight="480.0" prefWidth="250.0" spacing="15.0" styleClass="totals-box" 
            BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label text="Order Summary" textFill="#2c3e50">
               <font>
                  <Font name="Arial Bold" size="18.0" />
               </font>
            </Label>
            
            <Separator />
            
            <!-- Subtotal -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Subtotal:" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Arial" size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="subtotalLabel" text="0.00 â‚º" textFill="#27ae60">
                     <font>
                        <Font name="Arial Bold" size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            
            <!-- VAT -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="VAT (18%):" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Arial" size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="vatLabel" text="0.00 â‚º" textFill="#e67e22">
                     <font>
                        <Font name="Arial Bold" size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            
            <!-- Discount -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Discount:" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Arial" size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="discountLabel" text="0.00 â‚º" textFill="#e74c3c">
                     <font>
                        <Font name="Arial Bold" size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            
            <Separator />
            
            <!-- Total -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="TOTAL:" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Arial Black" size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="totalLabel" text="0.00 â‚º" textFill="#8e44ad">
                     <font>
                        <Font name="Arial Black" size="18.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            
            <Separator />
            
            <!-- Buttons -->
            <VBox spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="checkoutButton" maxWidth="1.7976931348623157E308" 
                         mnemonicParsing="false" onAction="#handleCheckout" prefHeight="45.0" 
                         styleClass="checkout-btn" text="Proceed to Checkout">
                     <font>
                        <Font name="Arial Black" size="14.0" />
                     </font>
                  </Button>
                  
                  <Button fx:id="continueShoppingButton" maxWidth="1.7976931348623157E308" 
                         mnemonicParsing="false" onAction="#handleContinueShopping" prefHeight="40.0" 
                         styleClass="continue-btn" text="Continue Shopping">
                     <font>
                        <Font name="Arial Bold" size="13.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </right>
   
</BorderPane>