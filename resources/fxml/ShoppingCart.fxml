            <Separator />
            
            <!-- Action Buttons -->
            <VBox spacing="12.0" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <children>
                  <!-- Checkout Button -->
                  <Button fx:id="checkoutButton" maxWidth="1.7976931348623157E308" 
                         mnemonicParsing="false" onAction="#handleCheckout" 
                         prefHeight="50.0" styleClass="checkout-btn" 
                         text="âœ… Proceed to Checkout">
