   <!-- CENTER: Cart Table and Remove Button -->
   <center>
      <VBox prefHeight="400.0" prefWidth="710.0" spacing="15.0" 
            BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
         <children>
            <!-- Cart Table -->
            <TableView fx:id="cartTable" prefHeight="320.0" 
                      styleClass="cart-table" VBox.vgrow="ALWAYS">
               <columns>
                  <!-- Product Name Column -->
                  <TableColumn fx:id="productColumn" prefWidth="280.0" 
