<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="15.0" 
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controllers.CarrierFormController"
      style="-fx-background-color: #f4f6f7; -fx-padding: 20;">

    <Label text="Employ New Carrier" textFill="#2c3e50">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

    <VBox spacing="10.0" alignment="CENTER_LEFT" maxWidth="300.0">
        
        <Label text="Username:" textFill="#7f8c8d"/>
        <TextField fx:id="usernameField" promptText="e.g. fast_ahmet" />

        <Label text="Full Name:" textFill="#7f8c8d"/>
        <TextField fx:id="fullNameField" promptText="e.g. Ahmet Yilmaz" />

        <Label text="Phone:" textFill="#7f8c8d"/>
        <TextField fx:id="phoneField" promptText="e.g. 5551234567" />

        <Label text="Password:" textFill="#7f8c8d"/>
        <PasswordField fx:id="passwordField" promptText="Min 2 chars" />

    </VBox>

    <Label fx:id="errorLabel" text="Error Message" textFill="#e74c3c" visible="false" wrapText="true"/>

    <Button fx:id="saveButton" text="Employ Carrier" onAction="#handleSave" 
            prefWidth="200.0" prefHeight="40.0"
            style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-cursor: hand;">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Button>

</VBox>